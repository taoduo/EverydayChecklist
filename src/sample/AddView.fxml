<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="100.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddController">
    <VBox prefHeight="100.0" prefWidth="300.0" spacing="5.0">
        <VBox>
            <Label text="New Task"/>
            <TextField fx:id="newTaskDesc"/>
        </VBox>
        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false"
                    onAction="#onCancelButtonClick" text="Cancel"/>
            <Button fx:id="addButton" defaultButton="true" mnemonicParsing="false"
                    onAction="#onAddButtonClick" text="Add"/>
        </HBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</AnchorPane>
